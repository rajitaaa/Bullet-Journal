<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rajita.bullet_journal.Deadlines">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/deadline" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="+ Add a new Deadline"
        android:width="1.5in"
        android:backgroundTint="@android:color/holo_red_light"
        android:fontFamily="casual"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/holo_orange_light"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button11"
        android:layout_alignRight="@+id/button11"
        android:layout_below="@+id/button11"
        android:layout_marginTop="31dp"
        android:width="1.5in"
        android:backgroundTint="@android:color/holo_blue_light"
        android:fontFamily="casual"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/holo_orange_light"
        android:textStyle="bold"
        android:text="View Upcoming Deadlines" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Reminders"
        android:fontFamily="casual"
        android:textSize="0.1in"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"/>
</RelativeLayout>
