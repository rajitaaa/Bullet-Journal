<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rajita.bullet_journal.Todo">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="348dp"
        android:layout_height="372dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/todo"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button14"
        android:layout_centerHorizontal="true"
        android:width="1.5in"
        android:backgroundTint="@android:color/holo_purple"
        android:fontFamily="casual"
        android:text="+ Add To-do List"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/holo_orange_light"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button13"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button13"
        android:layout_marginBottom="25dp"
        android:width="1.5in"
        android:backgroundTint="@android:color/holo_orange_light"
        android:fontFamily="casual"
        android:text="View To-do Lists"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/holo_orange_light"
        android:textStyle="bold" />


</RelativeLayout>
